<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pronted" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryVariant">@color/amber_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="actionOverflowButtonStyle">@id/invisible</item>
    </style>

    <!--<style name="StyleExpertTILDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_heading</item>
        <item name="android:textColorHint">@color/text_heading</item>
        &lt;!&ndash; TextInputLayout text color&ndash;&gt;
        <item name="hintTextColor">@color/text_heading</item>
    </style>-->
    <style name="StyleExpertTILDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edit_text_box_boarder</item>
        <item name="android:textColorHint">@color/text_heading</item>
        <!-- TextInputLayout text color-->
        <item name="hintTextColor">@color/text_heading</item>
    </style>
    <style name="TextButtonStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <!-- TextInputLayout text color-->
        <item name="hintTextColor">@color/text_heading</item>
    </style>

    <style name="TextClickableStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Theme.Pronted.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="StyleToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/amber_500</item>
        <item name="titleTextColor">@color/black</item>
    </style>
    <style name="Theme.Pronted.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="StyleExpertTILDenseDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edit_text_box_boarder</item>
        <item name="android:textColorHint">@color/text_heading</item>
        <!-- TextInputLayout text color-->
        <item name="hintTextColor">@color/text_heading</item>
    </style>

    <style name="StyleOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/bg_light_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>
    <style name="StyleFilledButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/btn_yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SwitchCompatStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/light_grey</item>
    </style>

</resources>