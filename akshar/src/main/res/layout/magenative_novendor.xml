<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/magenative_canceldata"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:src="@drawable/cros"
            android:textAllCaps="true"
            android:padding="@dimen/pad_5dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_above="@+id/noproduct"
            android:gravity="center"
            android:fontFamily="@font/celias_bold"
            android:padding="@dimen/pad_5dp"
            android:textColor="@color/onwhitetextcolor"
            android:textSize="20sp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/noproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/noproduct"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</layout>