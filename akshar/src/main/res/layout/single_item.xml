<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardcorner"
            android:layout_marginTop="@dimen/pad_2dp"
            android:layout_marginBottom="@dimen/pad_2dp"
            android:layout_marginEnd="@dimen/pad_5dp"
             app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
<!--            android:textColor="@color/darker_gray"-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:minWidth="30dp"
                android:adjustViewBounds="true"
                android:text="@string/app_name"
                android:fontFamily="@font/celias_regular"
                android:layout_gravity="center"
                android:padding="@dimen/pad_10dp"
                android:paddingBottom="@dimen/pad_2dp"
                android:textSize="@dimen/txt_15sp"
                android:gravity="center"
                android:textColor="@color/COLOR_545454"
                android:layout_height="wrap_content" />

            <!--<androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_height="50dp"
                android:background="@color/black"
                android:visibility="gone" />-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/att_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </LinearLayout>
</layout>