        <RelativeLayout
            android:id="@+id/MageNative_nextandskipsection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/MageNative_skip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingStart="@dimen/pad_30dp"
                android:paddingEnd="@dimen/pad_30dp"
                android:fontFamily="@font/celias_regular"
                android:drawablePadding="@dimen/pad_10dp"
                android:layout_weight="0.5"
                android:background="@color/onwhitetextcolor"
                android:gravity="center"
                android:text="@string/skip"
                android:drawableTint="@color/white"
                android:textAllCaps="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <!--<androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/space"
