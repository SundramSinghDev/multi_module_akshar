                android:layout_height="match_parent"
                android:alpha="0.8"
                android:layout_toEndOf="@+id/MageNative_skip"
                android:background="@color/white" />-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/MageNative_next"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/pad_30dp"
                android:paddingEnd="@dimen/pad_30dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/celias_regular"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/pad_10dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:layout_alignParentEnd="true"
                android:background="@color/onwhitetextcolor"
                android:gravity="center"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/MageNative_getstarted"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner_white"
            android:gravity="center"
            android:text="@string/gotit"
            android:textAllCaps="true"
            android:layout_margin="@dimen/pad_10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/celias_regular"
            android:visibility="gone" />
    </RelativeLayout>

</layout>

